<h1 class="text-4xl text-center font-semibold">{{titlePage}}</h1>
{{#if error}}
<div class="max-w-md mx-auto my-10"> 
    <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-md">{{error}}</p>
</div>
{{/if}}
<div class="mt-5 mx-auto max-w-md my-5">
    <div class="bg-white py-3 px-4.shadow">
        <form method="POST" >
                <label class="block text-sm text-gray-800 mb-2" for="name">Ingresa tu email</label>
                <input type="email" id="email" name="email" placeholder="Ej. correo@corre.com" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400">
            </div>
            <div>
                <label class="block text-sm text-gray-800 mb-2" for="name">Ingresa tu contraseña</label>
                <input type="password" id="pass" name="pass" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400">
            </div>
            <div class="flex items-left">
                <a href="/api/sessions/olvidePass" class="text-gray-600 text-xs underline">Olvide mi contraseña</a>
            </div>
            <input type="submit" value="Ingresar" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white rounded-md py-2 px-5 cursor-pointer my-5">
            <div class="flex items-left">
                <p class="text-gray-500 text-xs mr-2">Todavía no tenes una cuenta?</p>
                <a href="/api/sessions/register" class="text-gray-600 text-xs underline">Registrate</a>
            </div>
            <div class="mt-2 mx-auto my-5 flex items-center">
                <a href="/api/sessions/github" class="w-full text-center text-indigo-600 hover:bg-indigo-200 rounded-md py-1 px-5 cursor-pointer my-5 border border-indigo-600">Ingresar con Github</a>
            </div>
        </form>
    </div>
</div>
<script src="/static/js/session.js"></script>