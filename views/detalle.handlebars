<header class="bg-indigo-400 p-4">
    <div class="mx-auto flex justify-between items-center flex-wrap ">
        <h1 class="text-4xl text-center font-semibold uppercase">BookStore</h1>
        <nav>
            <a class= "bg-indigo-200 py-3 px-10 rounded-lg" href="/api/carts">Carrito</a>
            <a class= "bg-indigo-200 py-3 px-10 rounded-lg">Log out</a>
        </nav>
    </div>
</header>

<main>
    <h3 class="text-4xl text-center font-light my-5">{{titlePage}}</h3>
    <div id="divMain" class="mt-5 mx-auto max-w-md my-5 container flex">
        {{#if producto}}
        {{#each producto}}        
            <div class=" flex-column justify-between items-center flex-wrap m-10 space-y-4 p-8 pt-5 px-20 shadow-lg">
                <div class="font-mono text-center text-xl font-medium">{{this.title}}</div>
                <div>Description: {{this.description}}</div>
                <div>Price: ${{this.price}}</div>
                <button id={{this._id}} class="buttonDetalle bg-indigo-600 p-2 rounded text-center text-white">Agregar al carrito</button>
            </div>
        {{/each}}
        {{else}}
        <h3 class="text-4xl text-center font-semibold">No se encontro el producto</h3>
        {{/if}}
    </div>
    <div class="text-gray-600 text-xs underline text-center">
        <a href="/api/products/">Volver a Inicio</a>
    </div>
</main>
<script src="/static/js/products.js"></script>