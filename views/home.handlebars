<header class="bg-indigo-400 p-4">
    <div class="mx-auto flex justify-between items-center flex-wrap ">
        <h1 class="text-4xl text-center font-medium font-mono">BookStore</h1>
        <nav>
            <a class= "bg-indigo-200 py-3 px-10 rounded-lg" href="/api/carts">Carrito</a>
            <a id="logOut" class= "bg-indigo-200 py-3 px-10 rounded-lg">Log out</a>
        </nav>
    </div>
</header>
<main>
    <h3 class="text-4xl text-center my-5">{{titlePage}}</h3>
    <div class="mt-5 mx-auto max-w-md my-5 container flex">
        {{#if products}}
                {{#each products}}
                <div class=" flex-column justify-between items-center flex-wrap m-10 space-y-4 p-8 pt-5 shadow-lg">
                    <div class="font-mono text-center text-xl font-medium">{{this.title}}</div>
                    <div>Description: {{this.description}}</div>
                    <div>Price: ${{this.price}}</div>
                    <div><a href="/api/products/{{this._id}}" class= "bg-indigo-600 py-2 px-6 rounded-md text-white">Detalle</a></div>
                </div>
                {{/each}}
        {{else}}
        <h3 class="text-4xl text-center font-semibold">There are no product available</h3>
        {{/if}}
    </div>
</main>
<script src="/static/js/products.js"></script>